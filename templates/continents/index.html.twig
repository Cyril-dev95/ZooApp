{% extends 'base.html.twig' %}

{% block title %}Tous les Continents{% endblock %}

{% block body %}
<h1>Liste des Continents :</h1>

<table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
            </tr>
        </thead>
        <tbody>
            {% for continent in continents %}
                <tr>
                    <td>{{ continent.nom }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
