{% extends 'base.html.twig' %}

{% block title %}Toutes les Familles{% endblock %}

{% block body %}
<h1>Liste des Familles d'Animaux :</h1>

<table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
            </tr>
        </thead>
        <tbody>
            {% for famille in familles %}
                <tr>
                    <td>{{ famille.nom }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{path('app_animaux')}}">Retour Ã  la liste des Animaux</a>
{% endblock %}
